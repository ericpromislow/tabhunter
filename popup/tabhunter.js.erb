            if (bookmarkItem.type != "folder") {
                return;
            }
            var fullPath;
            var nextPath;
            if (bookmarkItem.title) {
                i += 1;
                fullPath = parentPath + bookmarkItem.title;
                nextPath = fullPath + "/";
